@model HotelAdmin.Models.Entity.Order

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4 info-sise">
                Number
            </dt>
            <dd class="col-sm-8 info-sise">
                @Model.Id
            </dd>
            <dt class="col-sm-4 info-sise">
                Date
            </dt>
            <dd class="col-sm-8 info-sise">
                @Model.Date
            </dd>
            <dt class="col-sm-4 info-sise">
                Client name
            </dt>
            <dd class="col-sm-8 info-sise">
                @Model.Client.Name
            </dd>
            <dt class="col-sm-4 info-sise">
                Surname
            </dt>
            <dd class="col-sm-8 info-sise">
                @Model.Client.Surname
            </dd>
            <dt class="col-sm-4 info-sise">
                Email
            </dt>
            <dd class="col-sm-8 info-sise">
                @Model.Client.Email
            </dd>
            <dt class="col-sm-4 info-sise">
                Phone
            </dt>
            <dd class="col-sm-8 info-sise">
                @Model.Client.Phone
            </dd>
            <dt class="col-sm-4 info-sise">
                Start date
            </dt>
            <dd class="col-sm-8 info-sise">
                @Model.Client.Start
            </dd>
            <dt class="col-sm-4 info-sise">
                End date
            </dt>
            <dd class="col-sm-8 info-sise">
                @Model.Client.End
            </dd>
        </dl>
    </div>    
</div>
<br/>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-info">Сancel</a>
    </form>
</div>
