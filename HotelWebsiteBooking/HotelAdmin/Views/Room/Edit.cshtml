@model HotelAdmin.Models.Entity.Room

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-3">
            <div class="card" style="margin-top:15px">
                <div class="card-header">
                    <h5 class="card-title text-center"> Edit room</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-controller="Room" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Number" class="control-label"></label>
                            <input asp-for="Number" class="form-control nav" />
                            <span asp-validation-for="Number" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input name="Photo" class="form-control" type="file">
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Сategory" class="control-label"></label>
                            <input asp-for="Сategory" class="form-control nav" />
                            <span asp-validation-for="Сategory" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control nav" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PersonsCount" class="control-label"></label>
                            <input asp-for="PersonsCount" class="form-control nav" />
                            <span asp-validation-for="PersonsCount" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <div class="row">
                                <div class="col-6">
                                    <input type="submit" class="form-control btn btn-primary" value="Save" />
                                </div>
                                <div class="col-6">
                                    <a asp-action="Index" asp-controller="Room" class="form-control btn btn-secondary">Сancel</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
