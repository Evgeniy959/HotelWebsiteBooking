    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <div class="col-md-6">
        <img src="~/@Html.DisplayFor(model => model.Photo)" alt="Photo" style="height: 350px;">
    </div>
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4 info-sise">
                @Html.DisplayNameFor(model => model.Number)
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Number)
            </dd>
            <dt class="col-sm-4 info-sise">
                @Html.DisplayNameFor(model => model.Сategory)
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Сategory)
            </dd>
            <dt class="col-sm-4 info-sise">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Price)
            </dd>
